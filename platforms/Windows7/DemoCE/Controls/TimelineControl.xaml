<UserControl x:Class="DemoCE.Controls.TimelineControl" x:Name="tcControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:DemoCE.Converters"
             mc:Ignorable="d" Focusable="True"
             d:DesignHeight="230" d:DesignWidth="630" Background="SkyBlue">

	<UserControl.Resources>
		<converters:HeightMarginConverter x:Key="hmConverter"/>
		<converters:NegateBooleanConverter x:Key="nbConverter"/>
	</UserControl.Resources>
	<Grid RenderOptions.EdgeMode="Aliased">
		<Line x:Name="lAxisY" Stroke="Black" StrokeThickness="1.5" HorizontalAlignment="Left" Margin="30,0" X1="0" Y1="0" X2="0" Y2="{Binding ElementName=tcControl, Path=ActualHeight}"/>
		<Line x:Name="lAxisX" Stroke="Black" StrokeThickness="1.5" VerticalAlignment="Bottom" Margin="0,30" X1="0" Y1="0" X2="{Binding ElementName=tcControl, Path=ActualWidth}" Y2="0"/>
		<Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Margin="10,0" Content="Delete" Click="BtDeleteClick"/>
		<Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Margin="60,0" Content="Replay" Click="BtReplayClick"
						IsEnabled="{Binding ElementName=tcControl, Path=IsEngineRunning, Converter={StaticResource ResourceKey=nbConverter}}"/>
		<Grid x:Name="gGraphContent" VerticalAlignment="Bottom" Margin="30,0,0,30" HorizontalAlignment="Left"
					Width="{Binding ElementName=tcControl, Path=ActualWidth}" Height="{Binding ElementName=tcControl, Path=ActualHeight}">
			<Canvas x:Name="cGraphContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible" />
			<Line x:Name="lCEMax" Stroke="Red" StrokeThickness="1.5" StrokeDashArray="3" VerticalAlignment="Bottom" Margin="0,0,0,100" X1="0" Y1="0" X2="{Binding ElementName=tcControl, Path=ActualWidth}" Y2="0" />
		</Grid>
	</Grid>
</UserControl>